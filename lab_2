// –Ü–Ω—Ç–µ—Ä—Ñ–µ–π—Å –í–∞–Ω—Ç–∞–∂–æ–ø–µ—Ä–µ–≤—ñ–∑–Ω–∏–∫
abstract class Vantazhopereviznyk {
  double rozrahuvatyChas(double vidstan);     // –≥–æ–¥–∏–Ω–∏
  double rozrahuvatyVartist(double vidstan);  // –≥—Ä–Ω
  void info(double vidstan, String misto);
}

// –ö–ª–∞—Å –õ—ñ—Ç–∞–∫
class Litak implements Vantazhopereviznyk {
  final double shvydkist = 850;  // –∫–º/–≥–æ–¥
  final double tsinaZaKm = 25;   // –≥—Ä–Ω/–∫–º

  @override
  double rozrahuvatyChas(double vidstan) => vidstan / shvydkist;

  @override
  double rozrahuvatyVartist(double vidstan) => vidstan * tsinaZaKm;

  @override
  void info(double vidstan, String misto) {
    print('‚úà –õ—ñ—Ç–∞–∫ –¥–æ $misto:');
    print('  –í—ñ–¥—Å—Ç–∞–Ω—å: ${vidstan} –∫–º');
    print('  –ß–∞—Å: ${rozrahuvatyChas(vidstan).toStringAsFixed(2)} –≥–æ–¥');
    print('  –í–∞—Ä—Ç—ñ—Å—Ç—å: ${rozrahuvatyVartist(vidstan).toStringAsFixed(2)} –≥—Ä–Ω');
    print('');
  }
}

// –ö–ª–∞—Å –ü–æ—ó–∑–¥
class Poyizd implements Vantazhopereviznyk {
  final double shvydkist = 120;   // –∫–º/–≥–æ–¥
  final double tsinaZaKm = 10;    // –≥—Ä–Ω/–∫–º

  @override
  double rozrahuvatyChas(double vidstan) => vidstan / shvydkist;

  @override
  double rozrahuvatyVartist(double vidstan) => vidstan * tsinaZaKm;

  @override
  void info(double vidstan, String misto) {
    print('üöÜ –ü–æ—ó–∑–¥ –¥–æ $misto:');
    print('  –í—ñ–¥—Å—Ç–∞–Ω—å: ${vidstan} –∫–º');
    print('  –ß–∞—Å: ${rozrahuvatyChas(vidstan).toStringAsFixed(2)} –≥–æ–¥');
    print('  –í–∞—Ä—Ç—ñ—Å—Ç—å: ${rozrahuvatyVartist(vidstan).toStringAsFixed(2)} –≥—Ä–Ω');
    print('');
  }
}

// –ö–ª–∞—Å –ê–≤—Ç–æ–º–æ–±—ñ–ª—å
class Avtomobil implements Vantazhopereviznyk {
  final double shvydkist = 80;   // –∫–º/–≥–æ–¥
  final double tsinaZaKm = 8;    // –≥—Ä–Ω/–∫–º

  @override
  double rozrahuvatyChas(double vidstan) => vidstan / shvydkist;

  @override
  double rozrahuvatyVartist(double vidstan) => vidstan * tsinaZaKm;

  @override
  void info(double vidstan, String misto) {
    print('üöó –ê–≤—Ç–æ–º–æ–±—ñ–ª—å –¥–æ $misto:');
    print('  –í—ñ–¥—Å—Ç–∞–Ω—å: ${vidstan} –∫–º');
    print('  –ß–∞—Å: ${rozrahuvatyChas(vidstan).toStringAsFixed(2)} –≥–æ–¥');
    print('  –í–∞—Ä—Ç—ñ—Å—Ç—å: ${rozrahuvatyVartist(vidstan).toStringAsFixed(2)} –≥—Ä–Ω');
    print('');
  }
}

// –û—Å–Ω–æ–≤–Ω–∞ —Ñ—É–Ω–∫—Ü—ñ—è
void main() {
  List<Map<String, dynamic>> marshruty = [
    {'misto': '–ö–∏—ó–≤', 'vidstan': 480.0},
    {'misto': '–õ—å–≤—ñ–≤', 'vidstan': 540.0},
    {'misto': '–û–¥–µ—Å–∞', 'vidstan': 470.0},
  ];

  var litak = Litak();
  var poyizd = Poyizd();
  var avtomobil = Avtomobil();

  for (var marshrut in marshruty) {
    String misto = marshrut['misto'];
    double vidstan = marshrut['vidstan'];

    litak.info(vidstan, misto);
    poyizd.info(vidstan, misto);
    avtomobil.info(vidstan, misto);
  }
}

